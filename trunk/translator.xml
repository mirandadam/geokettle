<translator-config>

  <system-key-prefix>System</system-key-prefix>
  <reference-locale>en_US</reference-locale>

  <source-directories>
    <root>src</root>
    <root>src-core</root>
    <root>src-ui</root>
  </source-directories>
  
  <locale-list>
    <locale> <code>en_US</code> <language>English</language> <country>United States of America</country> </locale>
    <locale> <code>fr_FR</code> <language>French</language> <country>France</country> </locale>
    <locale> <code>it_IT</code> <language>Italian</language> <country>Italy</country> </locale>
    <locale> <code>es_AR</code> <language>Spanish</language> <country>Argentina</country> </locale>
    <locale> <code>de_DE</code> <language>German</language> <country>Germany</country> </locale>
    <locale> <code>es_ES</code> <language>Spanish</language> <country>Spain</country> </locale>
    <locale> <code>zh_CN</code> <language>Simplified Chinese</language> <country>China</country> </locale>
    <locale> <code>nl_NL</code> <language>Dutch</language> <country>The Netherlands</country> </locale>
    <locale> <code>pt_BR</code> <language>Portuguese</language> <country>Brazil</country> </locale>
    <locale> <code>pt_PT</code> <language>Portuguese</language> <country>Portugal</country> </locale>
    <locale> <code>ja_JP</code> <language>Japanese</language> <country>Japan</country> </locale>
    <locale> <code>ko_KR</code> <language>Korean</language> <country>Korea</country> </locale>
  </locale-list>
  
  <files-to-avoid>
    <filename>MessagesSourceCrawler.java</filename>
    <filename>KeyOccurence.java</filename>
    <filename>TransLator.java</filename>
    <filename>MenuHelper.java</filename>
    <filename>Messages.java</filename>
    <filename>XulMessages.java</filename>
    <filename>AnnotatedStepsConfigManager.java</filename>
    <filename>AnnotatedJobConfigManager.java</filename>
    <filename>JobEntryValidatorUtils.java</filename>
    <filename>Const.java</filename>
    <filename>XulHelper.java</filename>
  </files-to-avoid>
  
  <xml-folders-to-scan>
    <xml-folder-to-scan> 
       <folder>ui</folder> 
       <wildcard>.*\.xul$</wildcard>
       <key-prefix>%</key-prefix>
       <package-default>org.pentaho.di.ui.spoon</package-default>
       <package-exceptions>
         <package-exception>  
           <starts-with>JobGraph.</starts-with>  
           <package>org.pentaho.di.ui.spoon.job</package>  
         </package-exception>
       </package-exceptions>
       <elements-to-scan> 
         <element-to-scan> <element>menu</element> <tag></tag> <attribute>label</attribute> </element-to-scan> 
         <element-to-scan> <element>menuitem</element> <tag></tag> <attribute>label</attribute> </element-to-scan>
         <element-to-scan> <element>toolbar</element> <tag></tag> <attribute>label</attribute> </element-to-scan>
         <element-to-scan> <element>toolbarbutton</element> <tag></tag> <attribute>label</attribute> </element-to-scan>
       </elements-to-scan>
     </xml-folder-to-scan>
    
  </xml-folders-to-scan>
  
</translator-config>

